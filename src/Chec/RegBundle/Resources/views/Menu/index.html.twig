{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            {{menu|raw}}
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <input></input>
        </div>
    </div>
    

{% endblock %}
{% block javascripts %}
   {{ parent() }}
    <script type="text/javascript">
    $(document).ready(function(){

        printHijo = function(data, padre){
            //console.log(data);

            html = '<ul>';
            for (var i = 0; i < data.length; i++) {

                if (data[i].tiene_hijo==1) {
                    html += '<li id="item_'+data[i].id+'">';
                    html += '<a href="#" id="link_'+data[i].id+'" class="padre">';
                    html += '<i class="ace-icon fa fa-circle"></i>';
                    html += '<span>'+data[i].nombre+'</span>';
                    html += '</a>';
                    html += '</li>';
                }else{
                    html += '<li id="item_'+data[i].id+'">';
                    html += '<i class="ace-icon fa fa-circle-o"></i>';
                    html += '<span>'+data[i].nombre+'</span>';
                    html += '</li>';
                }
                
            }
            html += '</ul>';

            $("#item_"+padre).append(html);

            $(".padre").click();
        }

        

        $(".padre").on("click", function(){
        
            var node = $(this).attr('id').split('_');

            $.ajax({
                type: 'POST',
                url: "{{path('menu_hijo')}}",
                data:{'padre':node[1]},
                success: function(data){
                    printHijo(data, node[1]);
                }
            })
        });
        

      
        

    });
    </script>
{% endblock %}