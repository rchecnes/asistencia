{% extends 'base.html.twig' %}

{% block body %}

<style type="text/css">
    .progress{
        margin-bottom: 0px;
    }
</style>
<div class="table-responsive">


    <p class="text-right">
        <a class="btn btn-lg btn-success" role="button" href="{{ path('asistencia_registrar_asistencia') }}">
            <i class="ace-icon fa fa-calendar fa-lg"></i>
            &nbsp;Marcar
            
            {{ saludo('Hola') }}
        </a>
    </p>

    <table class="table table-bordered">
        
        <tr>
            <th>Nro.</th>
            <th>Fecha</th>
            <th>Ingreso</th>
            <th>Ini. Almuerzo</th>
            <th>Fin. Almuerzo</th>
            <th>Salida</th>
            <th>Total Horas Trabajadas</th>
            <th>Progreso</th>
        </tr>
        <tbody>
        {% set contador=1 %}
        {% for asist in pagination %}
            <tr>
                <td>{{contador}}</td>
                <td>
                {% if asist.createat %}
                    {{asist.createat|date("m/d/Y")}}
                {% endif %}
                </td>
                <td>
                {% if asist.ingreso %}
                    {{asist.ingreso|date('H:i:s')}}
                {% endif %}
                </td>
                <td>
                {% if asist.inialmuerzo %}
                    {{asist.inialmuerzo|date('H:i:s')}}
                {% endif %}
                </td>
                <td>
                {% if asist.finalmuerzo %}
                    {{asist.finalmuerzo|date('H:i:s')}}
                {% endif %}
                </td>
                <td>
                {% if asist.salida %}
                    {{asist.salida|date('H:i:s')}}
                {% endif %}
                </td>
                <td>Total</td>
                <td width="20%">
                    <div class="col-xs-12">
                        
                        {% if asist.createat|date("Y-m-d") == dateact %}
                        <div class="progress progress-striped pos-rel" data-percent="20%">
                        <div class="progress-bar progress-bar-success" style="width: 20%;"></div>
                        {% else %}
                        <div class="progress progress-striped pos-rel" data-percent="100%">
                        <div class="progress-bar pos-rel" style="width: 100%;"></div>
                        {% endif %}  
                        </div>
                    </div>
                    
                </td>
            </tr>
            {% set contador=contador+1 %}
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
</div>
{% endblock %}

{% block javascripts %}
   {{ parent() }}
<script type="text/javascript">
    $(document).ready(function(){
        console.log("holaaa");
    });
</script>
{% endblock %}
