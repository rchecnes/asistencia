{% extends '::login.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
	{{ parent() }}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">LOGIN</h1>
            <div class="account-wall">
              <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                    alt="">
              <form class="form-signin" action="{{ path('chec_user_login_check') }}" method="POST" name="loginform" id="loginform">
                {% if error %}
                <br><div class="alert alert-danger">{{error.messagekey}}</div>
                {% endif %}
                <input type="text" name="_user_name" id="user_name" class="form-control" placeholder="Usuario รณ Email" value="{{ last_username }}" required autofocus><br>
                <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>
                <input type="hidden" name="_target_path" value="user_index" />
                <br>
                <p><label><input type="checkbox" name="rememberme" id="rememberme" value="forever">Recordar</p></label>
              </form>
            </div>
        </div>
    </div>
</div>


{% endblock %}