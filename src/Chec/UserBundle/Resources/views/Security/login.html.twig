{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
	{{ parent() }}

    <div class="container">
		<form action="{{ path('chec_user_login_check') }}" method="post" class="form-signin">
			<h2 class="form-signin-heading">Loigin</h2>

            {% if error %}
            <div>{{error.messagekey}}</div>
            {% endif %}

		    <label for="username" class="sr-only">{{ 'Username'|trans }}:</label>
		    <input type="text" id="user_name" class="form-control" name="_user_name" value="{{ last_username }}" placeholder="Username" required autofocus />

		    <label for="password" class="sr-only">Password:</label>
		    <input type="password" id="password" class="form-control" name="_password" placeholder="Password" required />
		    
		    <input type="hidden" name="_target_path" value="user_index" />

		    <button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>
		</form>
    </div> <!-- /container -->
{% endblock %}