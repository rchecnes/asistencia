{% extends 'base.html.twig' %}

{% block body %}
<form id="form_user" name="form_user" action="{{ path('user_new') }}" method="POST">
    <div class="form-group">
        <label for="">Nombre de usuario:</label>
        {{ form_widget(form.user_name) }}
    </div>
    <div class="form-group">
        <label for="">Nombre:</label>
        {{ form_widget(form.first_name) }}
    </div>
    <div class="form-group">
        <label for="">Apellido:</label>
        {{ form_widget(form.last_name) }}
    </div>
    <div class="form-group">
        <label for="">Correo:</label>
        {{ form_widget(form.email) }}
    </div>
    <div class="form-group">
        <label for="">Contraseña:</label>
        {{ form_widget(form.password) }}
    </div>
    <div class="form-group">
        <label for="">Repetir Contraseña:</label>
        {{ form_widget(form.password_veri) }}
    </div>
    
    <div class="form-group">
        <label for="">Rol:</label>
        {{ form_widget(form.rol) }}
    </div>
    <div class="form-group">
        <label for="">Estado:</label>
        {{ form_widget(form.isActive) }}
    </div>
    

    {{ form_widget(form._token) }}

    <p>
        <button type="submit" class="btn btn-success btn-lg">Crear</button>
        <a class="btn btn-lg btn-default" role="button" href="{{ path('user_index') }}">Cancelar</a>
    </p>
</form>
    
    
{% endblock %}
