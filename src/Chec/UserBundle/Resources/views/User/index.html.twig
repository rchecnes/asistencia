{% extends '::base.html.twig' %}


{% block body %}
<div class="table-responsive">
	<h1>Lista de Usuarios</h1>
	<table class="table table-bordered">
		<tr>
			<td>Nombre Usuario</td>
			<td>Nombre</td>
			<td>Apellido</td>
			<td>Email</td>
			<td>Rol</td>
			<td>Acciones</td>
		</tr>
		{% for user in users %}
			<tr>
				<td>{{user.username}}</td>
				<td>{{user.firstname}}</td>
				<td>{{user.lastname}}</td>
				<td>{{user.email}}</td>
				<td>{{user.role}}</td>
				<td>
					<a href="#">Edit</a>
				</td>
			</tr>
		{% endfor %}
	</table>
</div>
{% endblock %}
