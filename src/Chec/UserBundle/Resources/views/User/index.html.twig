{% extends '::base.html.twig' %}


{% block body %}
<div class="table-responsive">
	<h1>Lista de Usuarios</h1>

	<div class="count align-right">
    	Total de Registros:{{ pagination.getTotalItemCount }}
	</div>

	<table class="table table-bordered">
		<tr>
			<td>{{knp_pagination_sortable(pagination,'Nombre Usuario', 'u.user_name')}}</td>
			<td>{{knp_pagination_sortable(pagination,'Nombre', 'u.first_name')}}</td>
			<td>{{knp_pagination_sortable(pagination,'Apellido', 'u.last_name')}}</td>
			<td>{{knp_pagination_sortable(pagination,'Email', 'u.email')}}</td>
			<td>{{knp_pagination_sortable(pagination,'Rol', 'u.role')}}</td>
			<td>Acciones</td>
		</tr>
		{% for user in pagination %}
			<tr>
				<td>{{user.username}}</td>
				<td>{{user.firstname}}</td>
				<td>{{user.lastname}}</td>
				<td>{{user.email}}</td>
				<td>{{user.role}}</td>
				<td>
					<a href="#">Edit</a>
				</td>
			</tr>
		{% endfor %}
	</table>
	<div class="navigation">
    	{{ knp_pagination_render(pagination) }}
	</div>
</div>
{% endblock %}
