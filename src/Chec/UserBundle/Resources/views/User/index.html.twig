{% extends '::base.html.twig' %}


{% block body %}
<div class="table-responsive">
    <h1>Lista de Usuarios</h1>

    <div class="count align-right">
        Total de Registros:{{ pagination.getTotalItemCount }}
    </div>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new entry</a>
        </li>
    </ul>

    <table class="table table-bordered">
        <tr>
            <td>{{knp_pagination_sortable(pagination,'Nombre Usuario', 'u.username')}}</td>
            <td>{{knp_pagination_sortable(pagination,'Nombre', 'u.first_name')}}</td>
            <td>{{knp_pagination_sortable(pagination,'Apellido', 'u.last_name')}}</td>
            <td>{{knp_pagination_sortable(pagination,'Email', 'u.email')}}</td>
            <td>Rol</td>
            <td>Acciones</td>
        </tr>
        {% for user in pagination %}
            <tr>
                <td>{{user.username}}</td>
                <td>{{user.firstname}}</td>
                <td>{{user.lastname}}</td>
                <td>{{user.email}}</td>
                <td>{{user.rol.name}}</td>
                <td> 
                    <a class="btn btn-sm btn-info" href="{{ path('user_show', { 'id': user.id }) }}">Ver</a>
                    <a class="btn btn-sm btn-success" href="{{ path('user_edit', { 'id': user.id }) }}">Editar</a>      
                    <a class="btn btn-sm btn-danger" href="{{ path('user_edit', { 'id': user.id }) }}">Eliminar</a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}